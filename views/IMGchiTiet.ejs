<!DOCTYPE html>
<html>
  <head>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script>
      function btnUpdate() {
        document.getElementById("actionform").action = "/UpdateImage"
      }
      function btnDelete() {
        document.getElementById("actionform").action = "/DeleteImage"
      }
    </script>
  </head>
  <body style="margin: 10px">
  <h1 style="color: red;text-align: center;margin: 100px">Thông Tin</h1>

<div class="mx-auto" style="width: 1000px;">
      <form id="actionform" style="margin-top: 5%" method="post" action="" enctype="application/x-www-form-urlencoded" >
        <div class="row">
          <label class="col-md-4">ID</label><br>
          <input name="idImg"   class="form-control"readonly  class="form-control" value="<%=data._id%>">
        </div>
        <div class="row">
          <label class="col-md-4">Tiêu Đề</label><br>
          <input name="titleImg" class="form-control" value="<%=data.tieuDe%>">
        </div>
        <div class="row">
          <label class="col-md-4">Ngày Tạo</label><br>
          <input  class="form-control" name="dateImg" class="form-control" readonly value="<%=data.ngayTao%>">
        </div>
        <div class="row">
          <label class="col-md-4">Mô Tả</label><br>
          <input name="motaImg" class="form-control" value="<%=data.moTa%>">
        </div>

        <img  class="rounded mx-auto d-block"  style="margin-top: 30px" src="<%=data.linkIMG%>" width="200px">
        <input value="<%=data.linkIMG%>" type="hidden" name="limk" >
        <p></p>
        <div style="float: left; width: 50%">
          <button onclick="btnUpdate()" style="margin: 10px" type="submit" class="form-control btn btn-outline-danger align-items-center">Update</button>
        </div>
        <div style="float: right; width: 50%">
          <button onclick="btnDelete()" style="margin: 10px" type="submit" class="form-control btn btn-outline-danger align-items-center">Delete</button>
        </div>
      </form>
</div>

  </body>
</html>
